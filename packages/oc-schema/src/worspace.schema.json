{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.opencollection.com/json/draft-07/opencollection-workspace/v1.0.0",
  "type": "object",
  "properties": {
    "info": {
      "$ref": "#/$defs/Info"
    },
    "workspace": {
      "type": "string",
      "description": "The version of the workspace schema"
    },
    "collections": {
      "type": "array",
      "description": "Array of collections in the workspace",
      "items": {
        "$ref": "#/$defs/OpenCollection"
      }
    }
  },
  "required": ["collections"],
  "$defs": {
    "Info": {
      "type": "object",
      "description": "Info about the workspace",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the workspace"
        },
        "summary": {
          "type": "string",
          "description": "A short summary of the workspace"
        },
        "version": {
          "type": "string",
          "description": "The version of the workspace"
        },
        "links": {
          "type": "array",
          "description": "Array of links related to the workspace",
          "items": {
            "$ref": "#/$defs/Link"
          }
        }
      },
      "additionalProperties": false
    },
    "Link": {
      "type": "object",
      "description": "A link with name and URL",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the link"
        },
        "url": {
          "type": "string",
          "description": "The URL of the link"
        }
      },
      "required": ["name", "url"],
      "additionalProperties": false
    },
    "OpenCollection": {
      "type": "object",
      "description": "Reference to an OpenCollection",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the collection"
        },
        "path": {
          "type": "string",
          "description": "Path where the collection is stored"
        }
      },
      "required": ["name", "path"],
      "additionalProperties": false
    }
  }
}

